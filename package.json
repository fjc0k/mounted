{
  "name": "mounted",
  "version": "1.5.0",
  "description": "一款基于 Taro 的小程序组件库。",
  "main": "src/components/index.ts",
  "scripts": {
    "dev:weapp": "wedevtools open && npm run build:weapp -- --watch",
    "dev:swan": "npm run build:swan -- --watch",
    "dev:alipay": "npm run build:alipay -- --watch",
    "dev:tt": "npm run build:tt -- --watch",
    "dev:h5": "npm run build:h5 -- --watch",
    "dev:rn": "npm run build:rn -- --watch",
    "build:weapp": "taro build --type weapp",
    "build:swan": "taro build --type swan",
    "build:alipay": "taro build --type alipay",
    "build:tt": "taro build --type tt",
    "build:h5": "taro build --type h5",
    "build:rn": "taro build --type rn",
    "release": "standard-version -a && git push --follow-tags origin master && npm publish && npm run build:weapp && wedevtools upload",
    "release:major": "standard-version -a --release-as major && git push --follow-tags origin master && npm publish && npm run build:weapp && wedevtools upload"
  },
  "author": {
    "name": "Jay Fong",
    "email": "fjc0kb@gmail.com",
    "url": "https://github.com/fjc0k"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fjc0k/mounted"
  },
  "bugs": {
    "url": "https://github.com/fjc0k/mounted/issues"
  },
  "keywords": [
    "taro",
    "taro-components",
    "weapp",
    "weapp-components"
  ],
  "license": "MIT",
  "eslintConfig": {
    "root": true,
    "extends": "io",
    "settings": {
      "react": {
        "pragma": "Taro"
      }
    }
  },
  "eslintIgnore": [
    "dist",
    "node_modules"
  ],
  "stylelint": {
    "extends": "stylelint-config-io",
    "ignoreFiles": [
      "**/node_modules/**/*",
      "**/*.tsx",
      "**/*.ts"
    ]
  },
  "files": [
    "src/components",
    "src/styles",
    "src/hooks"
  ],
  "dependencies": {
    "@types/echarts": "^4.1.10",
    "dayjs": "^1.8.15",
    "vtils": "^2.24.0"
  },
  "devDependencies": {
    "@tarojs/cli": "1.3.15",
    "@tarojs/components": "1.3.15",
    "@tarojs/plugin-babel": "1.3.15",
    "@tarojs/plugin-csso": "1.3.15",
    "@tarojs/plugin-sass": "1.3.15",
    "@tarojs/plugin-uglifyjs": "1.3.15",
    "@tarojs/router": "1.3.15",
    "@tarojs/taro": "1.3.15",
    "@tarojs/taro-alipay": "1.3.15",
    "@tarojs/taro-h5": "1.3.15",
    "@tarojs/taro-swan": "1.3.15",
    "@tarojs/taro-tt": "1.3.15",
    "@tarojs/taro-weapp": "1.3.15",
    "@tarojs/webpack-runner": "1.3.15",
    "@types/react": "16.3.14",
    "@types/webpack-env": "^1.13.6",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-jsx-stylesheet": "^0.6.5",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "echarts": "^4.2.1",
    "eslint": "^5.15.3",
    "eslint-config-io": "^0.8.0",
    "miniprogram-api-typings": "^2.4.2-2",
    "nerv-devtools": "^1.4.0",
    "nervjs": "^1.4.0",
    "standard-version": "^4.4.0",
    "stylelint": "^9.10.1",
    "stylelint-config-io": "^0.1.0",
    "typescript": "^3.3.3333",
    "wedevtools-cli": "^0.1.0"
  }
}
